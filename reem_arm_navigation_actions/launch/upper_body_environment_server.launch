<launch>
 <!-- Additional description parameters -->
  <include file="$(find reem_arm_navigation_config)/launch/reem_planning_environment.launch" />

  <!-- Environment server node -->
  <node pkg="planning_environment" type="environment_server" output="screen" name="upper_body_environment_server">

    <remap from="collision_map"        to="collision_map_occ" />
    <remap from="collision_map_update" to="collision_map_occ_update" />
    <param name="use_collision_map"    type="bool"   value="false" />

    <param name="group"                           type="string" value="upper_body" />
    <param name="allow_valid_collisions"          type="bool"   value="false" />
    <param name="contacts_to_compute_for_display" type="int"    value="50" />
    <param name="bounding_planes"                 type="string" value="0 0 1 -0.01" />

    <param name="collision_map_safety_timeout"         type="double" value="100000.0" />
    <param name="joint_states_safety_timeout"          type="double" value="1.0" />
    <param name="tf_safety_timeout"                    type="double" value="1.0" />
    <param name="joint_state_cache_allowed_difference" type="double" value="0.1" />
    <param name="object_padd"                          type="double" value="0.04" />
    <param name="pointcloud_padd"                      type="double" value="0.0" />

    <rosparam command="load" file="$(find reem_arm_navigation_actions)/config/environment_server_padding.yaml" />
  </node>
</launch>
